<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detailed_screen_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="5sp"
        android:textAlignment="center"
        android:focusedByDefault="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/detailed_screen_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="5sp"
        android:textAlignment="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/detailed_screen_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="5sp"
        android:textAlignment="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/detailed_screen_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="15sp"
        android:textAlignment="center"
        android:text="TextView" />

    <EditText
        android:id="@+id/detailed_screen_offer_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginBottom="15sp"
        android:hint="Предложить свою цену"/>

    <Button
        android:id="@+id/detailed_screen_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Принять"/>


</LinearLayout>

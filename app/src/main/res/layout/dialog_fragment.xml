<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/dialog_button_refuse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отказаться" />

    <TextView
        android:id="@+id/dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="TextView" />

    <Button
        android:id="@+id/dialog_button_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Принять" />

    <Button
        android:id="@+id/dialog_button_hurry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Поторопить клиента"
        android:layout_marginBottom="20sp"/>

    <Button
        android:id="@+id/dialog_button_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заказ завершен" />
</LinearLayout>
